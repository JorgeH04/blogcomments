<%include partials/_header%>




<div class="container p-4">
    <div class="row">
        <div class= "col-md-12 mt-5">
 
           <div class="card text-center mx-auto" >
                 <div class="card-body">
                       <h5><%= post.nombre%></h2>
                       <h5><%= post.mensaje%></h2>
                       <br>
 
                 </div>     
             </div>
        </div>
     </div>
 </div>


       <!-- COMMENTS -->
<div class="container">
<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Commentarios de los usuarios</h3>
  
  </div>
  <div class="card-body">

    <ul class="list-group p-4">
        <% comments.forEach(function (comment) { %>

            <div class="card">
             <div class="card-body ">                    
                 <p><%= comment.name %></p>
                 <p><%= comment.comment %></p>
                 <p><%= format(comment.timestamp) %></p>
                
                 <a href="/delete/comment/<%= comment.id %>" class="btn btn-danger">
                   Delete
                </a>
                <a href="/edit/<%= comment.id %>" class="btn btn-info">
                  Edit
                </a>                
            </div>
            <% }) %>
        </ul>
     </div>
   </div>
</div>

<%include partials/_footer%>
